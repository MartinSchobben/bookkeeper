Package: bookkeeper
Title: Covenient bookkeeping tools
Version: 0.0.0.9000
Authors@R: 
    person(
       "Martin",
       "Schobben",
       email = "schobbenmartin@gmail.com",
       role = c("aut", "cre"),
       comment = c(ORCID = "0000-0001-8560-0037")
